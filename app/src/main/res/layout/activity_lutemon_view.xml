<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".LutemonView">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="200dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/lutemonImage"
                android:layout_width="match_parent"
                android:layout_height="97dp"
                android:layout_weight="1"
                tools:srcCompat="@tools:sample/avatars" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/deleteButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@android:drawable/ic_delete" />

                <ImageButton
                    android:id="@+id/selectButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="SelectLutemon"
                    app:srcCompat="@android:drawable/btn_star_big_on" />

                <ImageButton
                    android:id="@+id/feedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@android:drawable/ic_input_add" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nameText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textAlignment="center"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/hpText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hp / MaxHp"
                android:textAlignment="center"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/attackText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Attack : x"
                android:textAlignment="center"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/defText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Defence : x"
                android:textAlignment="center"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/winsText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Wins : x"
                android:textAlignment="center"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/levelText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Level"
                android:textAlignment="center"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/expText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Exp / LvlUpExp"
                android:textAlignment="center"
                android:textSize="20sp" />

        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>